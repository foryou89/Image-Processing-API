{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "Image Processing API",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch \"./**/*.ts\" --exec \"ts-node\" ./src/index.ts",
    "build": "npm run clean && npm run copy-files && npx tsc",
    "start-prod": "npm run build && node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "npm run build && jasmine",
    "copy-files": "copyfiles --up 1 src/assets/src-images/*.* dist && copyfiles --up 1 src/assets/resized-images/*.* dist",
    "clean": "rimraf dist/"
  },
  "author": "Ahmed Mohamed",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/image-size": "^0.8.0",
    "@types/jasmine": "^4.3.0",
    "@types/jest": "^29.2.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.3",
    "@types/sharp": "^0.31.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine": "^4.4.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "image-size": "^1.0.2",
    "morgan": "^1.10.0",
    "sharp": "^0.31.1"
  }
}
